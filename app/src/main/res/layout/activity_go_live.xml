<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.belive24hrs.belive24hrs.login.ui.GoLiveActivity">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:src="@drawable/ic_start_live"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#70FFFFFF">

    </View>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#20000000">
        <ImageView
            android:layout_centerInParent="true"
            android:layout_width="200dp"
            android:layout_height="30dp"
            android:src="@drawable/search_bg"/>
        <EditText
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Enter your name"
            android:textColorHint="#FFFFFF"
            android:background="@android:color/transparent"/>
        <ImageView
            android:id="@+id/iv_camera"
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_camera"/>
        <ImageView
            android:layout_toRightOf="@+id/iv_camera"
            android:id="@+id/iv_location"
            android:layout_marginLeft="5dp"
            android:layout_centerVertical="true"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_location"/>
        <ImageView
            android:layout_marginRight="10dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_close"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/rl_start_live"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_centerInParent="true">
        <ImageView
            android:id="@+id/iv_start_live"
            android:layout_marginRight="50dp"
            android:layout_marginLeft="50dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/status_live_bg"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Start Live"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_centerInParent="true"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/rl_view_live"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/rl_start_live"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_centerInParent="true">
        <ImageView
            android:id="@+id/iv_view_live"
            android:layout_marginRight="50dp"
            android:layout_marginLeft="50dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/status_live_bg"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="View Live"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_centerInParent="true"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#30FFFFFF">
        <TextView
            android:layout_centerVertical="true"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:text="The Start live deems you're agreed BeLive24Hrs Streamer Agreement"
            android:gravity="center"/>
    </RelativeLayout>

</RelativeLayout>
